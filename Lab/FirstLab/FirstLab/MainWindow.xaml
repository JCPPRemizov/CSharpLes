<Window x:Class="FirstLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="424" Width="524">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="FirstDataGrid" Margin="10,10,10,10">

        </DataGrid>
        <Frame x:Name="PageFrame" Margin="10,10,10,10"/>
        <Button x:Name="NextButton" Content="Следующая страница" Margin="374,14,10,14" Click="Button_Click" Grid.Row="1"/>
        <Button x:Name="returnButton" Content="Назад" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" 
VerticalAlignment="Center" Height="46" Width="140" Click="ReturnButton_Click"/>
    </Grid>
</Window>
